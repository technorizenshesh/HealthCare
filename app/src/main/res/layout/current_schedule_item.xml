<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/_10sdp"
        android:layout_marginBottom="@dimen/_25sdp"
        app:cardElevation="@dimen/_25sdp"
        app:cardCornerRadius="@dimen/_10sdp"
        app:cardMaxElevation="@dimen/_25sdp"
        app:strokeColor="@color/black"
        app:strokeWidth="@dimen/_1sdp"
        android:outlineSpotShadowColor="@color/black"
        android:outlineAmbientShadowColor="@color/black"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="@dimen/_10sdp"
                android:paddingHorizontal="@dimen/_10sdp"
                android:paddingBottom="@dimen/_5sdp"
                >
                <RelativeLayout
                    android:layout_width="@dimen/_70sdp"
                    android:layout_height="@dimen/_80sdp"
                    android:background="@drawable/gray_bg_5"
                    android:padding="@dimen/_1sdp"
                    android:layout_marginRight="@dimen/_8sdp"
                    >
                <ImageView
                    android:id="@+id/ivProfile"
                    android:layout_width="@dimen/_70sdp"
                    android:layout_height="@dimen/_80sdp"
                    />
                </RelativeLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_8sdp"
                    android:orientation="vertical"
                    >

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        >

                        <TextView
                            android:id="@+id/tvCompanyName"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/montserrat_bold"
                            android:textColor="@color/black"
                            android:textStyle="bold"
                            android:textAllCaps="false"
                            android:text="CAREPEOPLE INC"
                            android:layout_toLeftOf="@id/tvID"
                            android:textSize="@dimen/_13sdp" />

                        <TextView
                            android:id="@+id/tvID"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/_11sdp"
                            android:fontFamily="@font/montserrat_regular"
                            android:textColor="@color/black"
                            android:layout_alignParentRight="true"
                            android:text="12"
                            android:drawableLeft="@drawable/ic_person"
                            android:visibility="gone"
                            />

                    </RelativeLayout>

                    <TextView
                        android:id="@+id/jobPosition"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/montserrat_medium"
                        android:textColor="@color/black"
                        android:layout_centerVertical="true"
                        android:layout_centerHorizontal="true"
                        android:textAllCaps="false"
                        android:text="Personal Support Worker"
                        android:textSize="@dimen/_11sdp" />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        >
                        <TextView
                            android:id="@+id/tvDuty"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/montserrat_medium"
                            android:textColor="@color/black"
                            android:layout_centerVertical="true"
                            android:layout_centerHorizontal="true"
                            android:textAllCaps="false"
                            android:text="(Floor Duty)"
                            android:textSize="@dimen/_12sdp" />

                        <TextView
                            android:id="@+id/tvShiftType"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/montserrat_medium"
                            android:textColor="@color/black"
                            android:layout_centerVertical="true"
                            android:layout_centerHorizontal="true"
                            android:textAllCaps="false"
                            android:text="(Floor Duty)"
                            android:layout_marginLeft="@dimen/_5sdp"
                            android:visibility="gone"
                            android:textSize="@dimen/_12sdp" />

                    </LinearLayout>
                    <TextView
                        android:id="@+id/tvDate"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Date : Sat. Jul 17, 2021"
                        android:drawableLeft="@drawable/ic_cal"
                        android:gravity="center_vertical"
                        android:fontFamily="@font/montserrat_regular"
                        android:textColor="@color/black"
                        android:drawablePadding="@dimen/_5sdp"
                        android:textSize="@dimen/_10sdp"
                        android:layout_marginTop="@dimen/_8sdp"
                        />

                    <TextView
                        android:id="@+id/tvSignleTime"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Time : 6:00 AM - 6:00 PM (12 hrs)"
                        android:drawableLeft="@drawable/ic_hrs"
                        android:gravity="center_vertical"
                        android:fontFamily="@font/montserrat_regular"
                        android:textColor="@color/black"
                        android:drawablePadding="@dimen/_5sdp"
                        android:textSize="@dimen/_10sdp"
                        android:layout_marginTop="@dimen/_3sdp"
                        />
                    <TextView
                        android:id="@+id/tvMutlipleTime"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/view_shift_timing"
                        android:drawableLeft="@drawable/ic_time"
                        android:gravity="center_vertical"
                        android:fontFamily="@font/montserrat_semibold"
                        android:textColor="@color/blue"
                        android:drawablePadding="@dimen/_5sdp"
                        android:textSize="@dimen/_10sdp"
                        android:visibility="gone"
                        android:layout_marginTop="@dimen/_3sdp"
                        />
                    <TextView
                        android:id="@+id/tvBreak"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Unpaid Break: None"
                        android:drawableLeft="@drawable/ic_unpaid"
                        android:gravity="center_vertical"
                        android:fontFamily="@font/montserrat_regular"
                        android:textColor="@color/black"
                        android:drawablePadding="@dimen/_5sdp"
                        android:textSize="@dimen/_10sdp"
                        android:layout_marginTop="@dimen/_3sdp"
                        />
                    <TextView
                        android:id="@+id/tvTransit"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/transit_allowance"
                        android:drawableLeft="@drawable/ic_transit_allowance"
                        android:gravity="center_vertical"
                        android:fontFamily="@font/montserrat_regular"
                        android:textColor="@color/black"
                        android:drawablePadding="@dimen/_5sdp"
                        android:textSize="@dimen/_10sdp"
                        android:layout_marginTop="@dimen/_3sdp"
                        />
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        >
                        <TextView
                            android:id="@+id/hrRate"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Pay: $180.00 @ $15/hr"
                            android:drawableLeft="@drawable/ic_pay"
                            android:gravity="center_vertical"
                            android:fontFamily="@font/montserrat_regular"
                            android:textColor="@color/black"
                            android:drawablePadding="@dimen/_5sdp"
                            android:textSize="@dimen/_10sdp"
                            android:layout_centerVertical="true"
                            />

                        <ImageView
                            android:id="@+id/ivChat"
                            android:layout_width="@dimen/_20sdp"
                            android:layout_height="@dimen/_20sdp"
                            android:src="@drawable/ic_chat"
                            android:layout_alignParentRight="true"
                            />

                    </RelativeLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/instant_pay_available"
                        android:drawableLeft="@drawable/ic_instant_pay"
                        android:gravity="center_vertical"
                        android:fontFamily="@font/montserrat_regular"
                        android:textColor="@color/black"
                        android:drawablePadding="@dimen/_5sdp"
                        android:textSize="@dimen/_10sdp"
                        />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        >

                        <TextView
                            android:id="@+id/tvCovid"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/covid_19_negative"
                            android:drawableLeft="@drawable/ic_covid"
                            android:gravity="center_vertical"
                            android:fontFamily="@font/montserrat_regular"
                            android:textColor="@color/black"
                            android:drawablePadding="@dimen/_5sdp"
                            android:textSize="@dimen/_10sdp"
                            android:layout_marginTop="@dimen/_3sdp"
                            />
                        <TextView
                            android:id="@+id/tvShiftNumber"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="#1234"
                            android:gravity="center_vertical"
                            android:fontFamily="@font/montserrat_regular"
                            android:textColor="@color/black"
                            android:drawablePadding="@dimen/_5sdp"
                            android:textSize="@dimen/_10sdp"
                            android:layout_alignParentRight="true"
                            android:layout_marginTop="@dimen/_3sdp"
                            />
                    </RelativeLayout>

                    <TextView
                        android:id="@+id/tvDistance"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Distance: 20km"
                        android:drawableLeft="@drawable/ic_locat"
                        android:gravity="center_vertical"
                        android:fontFamily="@font/montserrat_regular"
                        android:textColor="@color/black"
                        android:drawablePadding="@dimen/_5sdp"
                        android:textSize="@dimen/_10sdp"
                        android:layout_marginTop="@dimen/_3sdp"
                        />

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginHorizontal="@dimen/_10sdp"
                android:layout_marginBottom="@dimen/_5sdp"
                >
                <RelativeLayout
                    android:layout_width="@dimen/_70sdp"
                    android:layout_height="@dimen/_80sdp"
                    android:background="@drawable/gray_bg_5"
                    android:padding="@dimen/_1sdp"
                    android:layout_marginRight="@dimen/_8sdp"
                    >
                <ImageView
                    android:id="@+id/ivWorker"
                    android:layout_width="@dimen/_70sdp"
                    android:layout_height="@dimen/_80sdp"
                    />
                </RelativeLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_8sdp"
                    android:orientation="vertical"
                    >

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/shift_accepted_by"
                        android:gravity="center_vertical"
                        android:fontFamily="@font/montserrat_medium"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_13sdp"
                        android:layout_marginTop="@dimen/_5sdp"
                        />

                    <TextView
                        android:id="@+id/tvWorkerName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="David lbe"
                        android:gravity="center_vertical"
                        android:fontFamily="@font/montserrat_medium"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_13sdp"
                        android:layout_marginTop="@dimen/_5sdp"
                        />
                    <TextView
                        android:id="@+id/tvWorkerDesignation"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="(Personal Support Worker)"
                        android:gravity="center_vertical"
                        android:fontFamily="@font/montserrat_medium"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_13sdp"
                        android:layout_marginTop="@dimen/_5sdp"
                        />
                </LinearLayout>

            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/light_gray"
                >
                <TextView
                    android:id="@+id/tvLocation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="12 Park Toronto ON M5E 1B8 Canada"
                    android:drawableLeft="@drawable/ic_location_on_24"
                    android:gravity="center"
                    android:padding="@dimen/_8sdp"
                    android:textStyle="bold"
                    android:layout_gravity="center_horizontal"
                    android:textColor="@color/black"
                    android:drawablePadding="@dimen/_5sdp"
                    android:textSize="@dimen/_12sdp"
                    android:layout_centerInParent="true"
                    />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rlShiftsNotes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingVertical="@dimen/_8sdp"
                android:paddingHorizontal="@dimen/_10sdp"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/montserrat_semibold"
                    android:textColor="@color/black"
                    android:text="Shift Notes"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center_horizontal"
                    android:textSize="@dimen/_14sdp" />

                <ImageView
                    android:id="@+id/plus"
                    android:layout_width="@dimen/_15sdp"
                    android:layout_height="@dimen/_15sdp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ic_add"
                    />

                <ImageView
                    android:id="@+id/minus"
                    android:layout_width="@dimen/_15sdp"
                    android:layout_height="@dimen/_15sdp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ic_minus"
                    android:visibility="gone"
                    />
            </RelativeLayout>

            <TextView
                android:id="@+id/tvShiftsNotes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/_14sdp"
                android:textColor="@color/black"
                android:layout_margin="@dimen/_14sdp"
                android:fontFamily="@font/montserrat_medium"
                android:visibility="gone"
                android:text="Hello THis is for the TestingPurpose "
                />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnClockIn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/clock_in"
                android:background="@drawable/button_bg"
                android:textColor="@color/white"
                android:fontFamily="@font/montserrat_semibold"
                android:textSize="@dimen/_12sdp"
                android:visibility="gone"
                />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnDelete"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/cancel"
                android:background="@drawable/gray_button_bg"
                android:textColor="@color/black"
                android:fontFamily="@font/montserrat_semibold"
                android:textSize="@dimen/_12sdp"
                android:visibility="gone"
                />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnAccept"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/cancel"
                android:background="@drawable/gray_button_bg"
                android:textColor="@color/black"
                android:fontFamily="@font/montserrat_semibold"
                android:textSize="@dimen/_12sdp"
                android:visibility="gone"
                />

            <LinearLayout
                android:id="@+id/llRecruitment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                >

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btnRecruit"
                    android:layout_width="0dp"
                    android:layout_weight=".5"
                    android:layout_height="wrap_content"
                    android:text="@string/recruit"
                    android:textColor="@color/white"
                    android:fontFamily="@font/montserrat_semibold"
                    android:textSize="@dimen/_12sdp"
                    android:background="@drawable/bright_blue_top_right"
                    />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btnCancel"
                    android:layout_width="0dp"
                    android:layout_weight=".5"
                    android:layout_height="wrap_content"
                    android:text="@string/cancel"
                    android:background="@drawable/gray_button_top_right"
                    android:textColor="@color/black"
                    android:fontFamily="@font/montserrat_semibold"
                    android:textSize="@dimen/_12sdp"
                    />
            </LinearLayout>

        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

</LinearLayout>